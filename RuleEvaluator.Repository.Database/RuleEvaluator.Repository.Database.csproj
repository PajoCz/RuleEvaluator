<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net472;net8.0</TargetFrameworks>
    <OutputType>Library</OutputType>
    <LangVersion>latest</LangVersion>
    <NoWarn>CS1591</NoWarn>
    
    <!-- Disable auto-generated assembly attributes to avoid conflicts with AssemblyInfo.cs -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    
    <!-- NuGet Package Properties -->
    <PackageId>RuleEvaluator.Repository.Database</PackageId>
    <Version>4.0.0</Version>
    <Authors>PajoCz</Authors>
    <Company>PajoCz</Company>
    <Description>Database repository implementation for RuleEvaluator with support for .NET Framework 4.7.2 and .NET 8.0</Description>
    <PackageProjectUrl>https://github.com/PajoCz/RuleEvaluator</PackageProjectUrl>
    <RepositoryUrl>https://github.com/PajoCz/RuleEvaluator</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <!-- .NET Framework specific references -->
  <ItemGroup Condition="'$(TargetFramework)' == 'net472'">
    <Reference Include="System.Runtime.Caching" />
  </ItemGroup>

  <!-- .NET 8.0 specific references for missing APIs -->
  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <PackageReference Include="System.Runtime.Caching" Version="8.0.0" />
    <PackageReference Include="Microsoft.Data.SqlClient" Version="5.2.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\RuleEvaluator.Repository.Contract\RuleEvaluator.Repository.Contract.csproj" />
    <ProjectReference Include="..\RuleEvaluator\RuleEvaluator.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Dapper" Version="2.1.35" />
  </ItemGroup>
</Project>
